<div class="container-fluid">
    <div class="row">
        <div class="col-sm-8">
            {{>siteIntro}}
            <a href="/login" data-test="signupLogin">Existing User</a>
        </div>
        <div class="col-sm-4">
            <form method="POST" data-test="signupForm" action="/signup">
                <div class="form-group">
                    <label for="name">Full Name : </label>
                    <input type="text" class="form-control" data-test="signupName" name="name" value="{{name}}" aria-describedby="Full Name" required> {{!--
                    <small id="name" class="form-text text-muted">E-Mail (or) Username</small> --}}
                </div>
                <div class="form-group">
                    <label for="eMail">E-Mail : </label>
                    <input type="email" class="form-control" data-test="signupEMail" name="eMail" value="{{eMail}}" aria-describedby="E-Mail" required> {{!--
                    <small id="eMail" class="form-text text-muted">E-Mail (or) Username</small> --}}
                </div>
                <div class="form-group">
                    <label for="userName">Username : </label>
                    <input type="text" class="form-control" data-test="signupUserName" name="userName" value="{{userName}}" aria-describedby="Username" required> {{!--
                    <small id="userName" class="form-text text-muted">E-Mail (or) Username</small> --}}
                </div>
                <div class="form-group">
                    <label for="password">Password : </label>
                    <input type="password" class="form-control" data-test="signupPassword" name="password" aria-describedby="Password" required> {{!--
                    <small id="password" class="form-text text-muted">Password</small> --}}
                </div>
                <div class="form-group">
                    <label for="rPassword">Re-Password : </label>
                    <input type="password" class="form-control" data-test="signupRPassword" name="rPassword" aria-describedby="Re-Password" required> {{!--
                    <small id="rPassword" class="form-text text-muted">Password</small> --}}
                </div>
                {{{message}}}
                <button type="submit" data-test="signupSubmit" name="login" class="btn btn-primary btn-block">Register</button>
            </form>
        </div>
    </div>
</div>